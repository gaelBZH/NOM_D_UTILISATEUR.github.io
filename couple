        function lov(){
            
            
const Gars = ["Ga√´l", "Victor", "No√©", "Ronan", "Jean-Baptiste", "Lilian", "Matt√©o", "Dorian"];
const Fille = ["Uliana", "Gabri√®le", "Gwena√´lle", "Diane", "Amphitrite", "Clarisse", "Isabella", "Barbara"];

const Couple = [];
const maxIterations = Math.max(Fille.length, Gars.length);

for (let love = 0; love < maxIterations; love++) {
  const a = Math.floor(Math.random() * Gars.length);
  const b = Math.floor(Math.random() * Fille.length);
  Couple.push([Gars[a], Fille[b]]);
  Gars.splice(a, 1);
  Fille.splice(b, 1);
}

console.log(Couple);
var indiceAleatoire = Math.floor(Math.random() * Couple.length);
document.getElementById("resultat").textContent = Couple[indiceAleatoire][0];
document.getElementById("resultat2").textContent = Couple[indiceAleatoire][1];
}


